generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  userId        String   @id
  name          String
  email         String   @unique
  teamId        String?
  preferencesUnits         String?
  preferencesHydrationGoal Int?
  preferencesAiTone        String?
  sharedMetrics            String?

  metrics       Metric[]
  journal       JournalEntry[]
  bookmarks     Bookmark[]
}

model Metric {
  id                 Int     @id @default(autoincrement())
  userId             String
  date               String  // YYYY-MM-DD
  recoveryScore      Int
  strainScore        Float
  sleepHours         Float
  hrv                Float
  vo2Max             Float
  hydrationScore     Int
  hydrationIntakeMl  Int

  user   User   @relation(fields: [userId], references: [userId])

  @@index([userId, date])
}

model JournalEntry {
  id                String  @id @default(cuid())
  userId            String
  date              String
  mood              Int
  stress            Int
  energy            Int
  soreness          Int
  sleepQuality      Int
  nutritionQuality  Int
  hydrationGoalMet  Boolean
  aiGenerated       Boolean
  notes             String?

  user   User   @relation(fields: [userId], references: [userId])

  @@index([userId, date])
}

model Bookmark {
  id          String @id @default(cuid())
  userId      String
  name        String
  formula     String
  metricsUsed String
  graphType   String
  dateSaved   DateTime @default(now())
  favorite    Boolean  @default(false)

  user   User   @relation(fields: [userId], references: [userId])

  @@index([userId, dateSaved])
}


